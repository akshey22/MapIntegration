<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerVertical="true"
    android:background="@android:color/transparent"
    android:id="@+id/cardback"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_1sdp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:id="@+id/user_soucres_and_des"/>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        app:cardElevation="0dp"
        android:layout_toRightOf="@+id/user_soucres_and_des"
        app:cardBackgroundColor="@color/white"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:layout_height="@dimen/_30sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/numcard"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_centerVertical="true"
                android:background="@drawable/acc_white_border_ki"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="@dimen/_9sdp"
                    android:textAlignment="center"
                    android:id="@+id/flor_num_txt"
                    android:textStyle="bold"
                    android:textColor="@color/blacker"
                    android:fontFamily="@font/montserratregular"/>

            </RelativeLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="secondfloor"
                android:textSize="@dimen/_9sdp"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_5sdp"
                android:id="@+id/flor_name_txt"
                android:layout_toRightOf="@+id/numcard"
                android:textStyle="bold"
                android:textColor="@color/blacker"
                android:fontFamily="@font/montserratregular"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>
