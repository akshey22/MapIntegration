<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/direction_content"
    android:layout_width="match_parent"
    android:background="@color/transparent_white"
    android:clickable="true"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/_top_techie"
            android:clickable="true"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pullicon"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_3sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_6sdp"
                android:clickable="true"
                android:background="@drawable/acc_gray_dark"
                android:visibility="invisible" />


            <ImageView
                android:layout_width="@dimen/_28sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_drawable"
                android:visibility="invisible"
                android:id="@+id/line_draw"
                android:layout_centerHorizontal="true"
                />

            <ImageView
                android:id="@+id/direction"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:clickable="true"
                android:padding="0.7dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/bottom_recyclerplacehoder"
                android:background="@drawable/backslightgrey" />

            <TextView android:id="@+id/calorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/direction"
                android:layout_marginLeft="10dp"
                android:textColor="@color/grey"
                android:text="jjjjjjj"/>

            <TextView android:id="@+id/steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calorie"
                android:layout_marginLeft="10dp"
                android:textColor="@color/grey"
                android:text="jjjjjj"/>


            <TextView
                android:id="@+id/storename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pullicon"
                android:layout_marginLeft="@dimen/_10sdp"
                android:clickable="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toRightOf="@+id/direction"
                android:fontFamily="@font/montslight"
                android:singleLine="true"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/setfav"
                android:text="U.S. Polo Assn."
                android:textColor="#5e5d5d"
                android:textSize="@dimen/_17sdp" />

    </RelativeLayout>
    </RelativeLayout>

