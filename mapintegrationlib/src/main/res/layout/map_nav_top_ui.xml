<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    android:visibility="visible"
    android:id="@+id/map_nav_ui_card"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_25sdp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="visible"
        android:background="@color/blue_new"
        android:layout_height="@dimen/_80sdp">

        <RelativeLayout
            android:layout_width="@dimen/_95sdp"
            android:id="@+id/iconandtext"
            android:gravity="center"
            android:background="@color/blue_new_light"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:visibility="visible"
                android:padding="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/navigate_straight_white"
                android:id="@+id/navigation_top_ui"/>

            <TextView
                android:id="@+id/navigation_top_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your
Destination"
                android:textSize="@dimen/_7sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/montserratregular"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_below="@+id/navigation_top_ui"/>
            <TextView
                android:layout_width="0.7dp"
                android:layout_height="@dimen/_44sdp"
                android:layout_toRightOf="@+id/navigation_top_ui"
                android:layout_marginLeft="@dimen/_8sdp"
                android:visibility="invisible"
                android:id="@+id/alertline"
                android:layout_centerVertical="true"
                android:background="@color/iron"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/iconandtext"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:visibility="invisible"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MAX"
                android:textColor="@color/white"
                android:fontFamily="@font/montserratregular"
                android:textSize="@dimen/_8sdp"
                android:singleLine="true"
                android:layout_marginTop="@dimen/_3sdp"
                android:textStyle="bold"
                android:layout_toLeftOf="@+id/offer_animation_onClick"
                android:id="@+id/title_offer_store"
                android:layout_marginLeft="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End Season Sale"
                android:textColor="@color/white"
                android:fontFamily="@font/montserratregular"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                android:paddingRight="@dimen/_5sdp"
                android:letterSpacing="-0.05"
                android:layout_below="@+id/title_offer_store"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_toLeftOf="@+id/offer_animation_onClick"
                android:id="@+id/title_offer_txt"
                android:layout_marginLeft="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Instant Cashback"
                android:textColor="@color/white"
                android:fontFamily="@font/montserratregular"
                android:textSize="@dimen/_13sdp"
                android:paddingRight="@dimen/_5sdp"
                android:letterSpacing="-0.05"
                android:layout_below="@+id/title_offer_txt"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_toLeftOf="@+id/offer_animation_onClick"
                android:id="@+id/title_offer_xt"
                android:layout_marginLeft="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_8sdp"
                android:text="Maximum Cashback Rs 500, on shopping for more than Rs 5000 "
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"
                android:layout_below="@+id/title_offer_xt"
                android:layout_marginRight="@dimen/_40sdp"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_10sdp"
                android:maxLines="2"
                android:layout_toLeftOf="@+id/offer_animation_onClick"
                android:layout_marginTop="@dimen/_3sdp"
                android:id="@+id/description_offer_txt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valid till 10 Feb : 9PM"
                android:layout_below="@+id/description_offer_txt"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_8sdp"
                android:id="@+id/offer_schedule_txt"
                android:fontFamily="@font/montserratregular"
                android:layout_marginLeft="@dimen/_10sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/_8sdp"
                android:fontFamily="@font/montserrat"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@color/transparent_original"
                android:text="OFFER"/>


        </RelativeLayout>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="hello"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:layout_margin="@dimen/_20sdp"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/jumbo"
        android:fontFamily="@font/montserrat_regular"/>

</androidx.cardview.widget.CardView>